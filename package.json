{
  "name": "openfoodfacts-nodejs",
  "version": "2.0.0",
  "description": "Open Food Facts API NodeJS Wrapper",
  "exports": [
    "./dist/main.js"
  ],
  "types": "dist/main.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "ts-standard",
    "fix": "ts-standard --fix",
    "commitmsg": "commitlint -q true --extends=@commitlint/config-conventional -e",
    "precommit": "ts-standard `git diff --name-only --staged --relative | grep '.js$'`",
    "openapi": "yarn openapi:server && yarn openapi:robotoff",
    "openapi:server": "openapi-typescript './server/docs/api/ref/**/*.{yml,yaml}' -o schemas/",
    "openapi:robotoff": "openapi-typescript './robotoff/doc/references/api.yml' -o 'schemas/robotoff.ts'",
    "test": "mocha --require ts-node/register test/**/*.ts",
    "build:docs": "typedoc main.ts",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate"
  },
  "ts-standard": {
    "env": [
      "mocha"
    ],
    "ignore": [
      "/docs/**/*.ts",
      "robotoff",
      "server"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openfoodfacts/openfoodfacts-nodejs.git"
  },
  "keywords": [
    "OFF",
    "OpenFoodFacts",
    "NodeJS",
    "Wrapper"
  ],
  "author": "openfoodfacts",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/openfoodfacts/openfoodfacts-nodejs/issues"
  },
  "homepage": "https://github.com/openfoodfacts/openfoodfacts-nodejs#readme",
  "dependencies": {
    "axios": "^1.6.2",
    "openapi-fetch": "^0.6.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.1",
    "@commitlint/config-conventional": "^18.4.0",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/mockery": "^1.4.30",
    "@types/node-fetch": "^2.6.4",
    "all-contributors-cli": "^6.24.0",
    "boxy-jsdoc-template": "^2.0.2",
    "chai": "^4.3.6",
    "formdata-node": "^5.0.0",
    "jsdoc": "^4.0.2",
    "mocha": "^9.2.2",
    "mockery": "^2.1.0",
    "openapi-typescript": "^6.7.2",
    "ts-standard": "^12.0.2",
    "typedoc": "^0.24.7",
    "typescript": "^5.0.4"
  },
  "packageManager": "yarn@3.5.1"
}
